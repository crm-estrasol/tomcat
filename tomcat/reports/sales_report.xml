                <div class="col-12 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
       
          </xpath>
         

    </template>
    
    <template id="sale_frist_report" name="custom" inherit_id="sale.report_saleorder_document">


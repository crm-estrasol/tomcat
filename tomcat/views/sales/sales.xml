<odoo>
    <data>
        <record id="inherit_sale_order" model="ir.ui.view">
            <field name="name">sale.order.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//tree//field[@name='product_id']" position="after">
                    <field name="project_sections"/>               

                </xpath>
                 <xpath expr="//control" position="replace">
                    <control>                                    
                            <create name="add_product_control" string="Add a product"/>
                            <create name="add_section_control" string=" Añadir Ubicacion" context="{'default_display_type': 'line_section'}"/>
                            <create name="add_proyect_control" string="Añadir Proyecto" context="{'default_display_type': 'line_project','default_name': 'x'}"/>
                    </control>
                    
                  </xpath>
        
               
            </field>

        </record>

       
        </record>

    </data>
</odoo>
 